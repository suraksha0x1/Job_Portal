        <a href="/dashboard">Create Jobs</a>
        <a href="/dashboard">Jobs Listed</a>
        <a href="/applications">Applications</a>
        <a href="/logout" class="logout-button">Logout</a>
    </div> -->

    <div class="container">
        <h1>Post a Job</h1>
        <form action="/api/post/job" method="POST">

            <div class="form-group">
                <label for="title">Job Title:</label>
                <input type="text" id="title" name="title" placeholder="Enter job title" required>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label for="description">Job Description:</label>
                <textarea id="description" name="description" placeholder="Enter job description" rows="5" required></textarea>
            </div>

            <!-- Salary -->
            <div class="form-group">
                <label for="salary">Salary:</label>
                <input type="number" id="salary" name="salary" placeholder="Enter salary" required>
            </div>

            <!-- Submit Button -->
            <button type="submit">Post Job</button>
        </form>

    </div>


</body>
</html>